---
import { Image } from "astro:assets";
import House from "../images/house.svg";
import Layout from "./layout.astro";
---

<Layout title={Astro.props.title} description={Astro.props.description} canonical={Astro.props.canonical ? `/aboutme${Astro.props.canonical}`: "/aboutme"}>
  <div class="about">
    <div class="container">
      <div class="header">
        <h1 class="english">About me</h1>
        <nav class="breadcrumb">
          <ol>
            <li class="japanese">
              <a href="/" class="home">
                <!-- house.svg © Fonticons, Inc. -->
                <Image
                  src={House}
                  alt="home"
                  width={20}
                  height={20}
                  class="house"
                />
                <span>ホーム</span>
              </a>
            </li>
            {Astro.props.about ? (
              <li class="english"><a href="/aboutme">About me</a></li>
              <li class="japanese">{Astro.props.about}</li>
            ):(
              <li class="english">About me</li>
            )}
          </ol>
        </nav>
      </div>
      <div class="article">
        <slot />
      </div>
    </div>
  </div>
</Layout>