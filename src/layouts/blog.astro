---
import { Image } from "astro:assets";
import House from "../images/house.svg";
import Layout from "./layout.astro";
---

<Layout
  title={Astro.props.title}
  description={Astro.props.description}
  canonical={Astro.props.canonical ? `/blog${Astro.props.canonical}`: "/blog"}
  image={Astro.props.image}
>
  <div class="blog">
    <div class="container">
      <div class="header">
        <h1 class="japanese">ブログ</h1>
        <nav class="breadcrumb">
          <ol>
            <li class="japanese">
              <a href="/" class="home">
                <!-- house.svg © Fonticons, Inc. -->
                <Image
                  src={House}
                  alt="home"
                  width={20}
                  height={20}
                  class="house"
                />
                <span>ホーム</span>
              </a>
            </li>
            {Astro.props.blog ? (
              <li class="japanese"><a href="/blog">ブログ</a></li>
              <li class="japanese">{Astro.props.blog}</li>
            ):(
              <li class="japanese">ブログ</li>
            )}
          </ol>
        </nav>
      </div>
      <div class="article">
        <slot />
      </div>
    </div>
  </div>
</Layout>
